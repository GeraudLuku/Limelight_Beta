<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.krystofrapp.limelightbeauty">

    <application
        android:allowBackup="true"
        android:allowClearUserDataOnFailedRestore="true"
        android:enabled="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/bg5"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:logo="@drawable/bg5"
        android:roundIcon="@drawable/bg5"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:node="merge">
        <activity android:name=".BusinessAccountSignUp"
            android:label="Business•Account"
            android:parentActivityName=".StartPage"/>
        <activity android:name=".StartPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Limelight•Beauty" />
        <activity
            android:name=".CustomSignUp"
            android:label="Custom•Account"
            android:parentActivityName=".StartPage" />
        <activity
            android:name=".UserLogin"
            android:label="User•Login"
            android:parentActivityName=".StartPage" />
        <activity
            android:name=".ForgotPassword"
            android:label="Reset•Password"
            android:parentActivityName=".UserLogin" />
        <activity
            android:name=".Services"
            android:label="Services"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".BookAppointment"
            android:label="Book•Appointment"
            android:parentActivityName=".Services" />
        <activity
            android:name=".PaymentGateway"
            android:label="Payment•Gateway" />
        <activity
            android:name=".OmPayment"
            android:label="Orange•Money" />
        <activity
            android:name=".MoMoPayment"
            android:label="MTN•Mobile•Money" />
        <activity
            android:name=".CartFragment"
            android:label="Cart"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AccountFragment"
            android:label="My•Account"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".UpdatePassword"
            android:label="Update•Password"
            android:parentActivityName=".AccountFragment" />
        <activity
            android:name=".UserProfile"
            android:label="My•Profile"
            android:parentActivityName=".AccountFragment" />
        <activity
            android:name=".UpgradeAccount"
            android:label="Upgrade•Account"
            android:parentActivityName=".AccountFragment" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>